{
    // "java.home": "/Users/philthy/SoftwarePackages/jdk-17.0.1.jdk/Contents/Home",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    // * EDITOR SETTINGS
    "editor.fontFamily": "JetBrainsMono Nerd Font",
    "editor.suggestSelection": "first",
    "editor.fontSize": 15.7,
    "editor.bracketPairColorization.enabled": true,
    "editor.fontLigatures": true,
    "vscode-neovim.highlightGroups.unknownHighlight": "vim",
    // * Color customizations
    // "workbench.colorCustomizations": {
    // Sets search highlight for vim 
    // Vim Search
    // "editor.findMatchHighlightBackground": "#fcf403",
    // Vim Incsearch
    // "editor.findMatchBackground": "#fcf403",
    // Vim Visual
    // "editor.selectionBackground": "#069ca1"
    // },
    // * TERMINAL SETTINGS
    "terminal.integrated.tabs.enabled": false,
    "terminal.integrated.fontSize": 15.4,
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.defaultProfile.osx": "zshnl",
    // ! This (particularly the zshnl value) prevents zsh from being a login shell. Setting zshnl as the default terminal 
    // ! (cmd+p -> Terminal: Select Default Profile) prevents $PATH from being loaded twice when opening with the `code .` 
    // ! terminal command. The drawback is that now $ZDOTDIR/.zlogin is not sourced at all when opening vscode any other 
    // ! way that using the `code .` command, and hence $PATH isn't fully loaded. So only open vscode with `code .` 
    // ! (or you can run zsh -l manually from the terminal if opening other than with `code .`).
    "terminal.integrated.profiles.osx": {
        "bash": {
            "path": "bash",
            "args": [
                "-l"
            ],
            "icon": "terminal-bash"
        },
        "zsh": {
            "path": "zsh",
            "args": [
                "-l"
            ]
        },
        "zshnl": {
            "path": "/bin/zsh"
        },
        "fish": {
            "path": "fish",
            "args": [
                "-l"
            ]
        },
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
        "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
        }
    },
    // * WORKBENCH SETTINGS
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "fluent-icons",
    "workbench.colorTheme": "GitHub Dark",
    "editor.inlineSuggest.enabled": true,
    "github.copilot.enable": {
        "*": false,
        "yaml": false,
        "plaintext": false,
        "markdown": false,
        "java": false
    },
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
