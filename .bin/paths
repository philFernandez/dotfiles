#!/bin/zsh

# Clear the current ansi sequence
cc() {
    printf -- '\033[0m'
}

# These are just the ansi sequences for telling if we're doing background, foreground, underline, etc.
ansiBG() {
    printf -- '\033[48;'
}

ansiFG() {
    printf -- '\033[1;38;'
}

ansiUL() {
    printf -- '\033[4;'
}


# These are the actual ansi colors.
pathBGColor() {
    printf -- '2;0;0;0m'
}

pathFGColor() {
    printf -- '5;82m'
}

pathULColor() {
    printf -- '58;5;196m'
}

fpathFGColor() {
    printf -- '5;1m'
}

fpathBGColor() {
    printf -- '5;82m'
}

fpathULColor() {
    printf -- '58;5;21m'
}

# Must have an ansi## followed by a (f)path##Color
pathBannerLeft() {
    ansiFG
    pathBGColor
    printf -- '\Ue0b6'
    cc
}
pathBannerBody() {
    ansiBG
    pathBGColor
    ansiFG
    pathFGColor
    ansiUL
    pathULColor
    printf -- '<-::Exported $PATH::->'
    cc
}
pathBannerRight() {
    ansiFG
    pathBGColor
    echo '\Ue0b4'
    cc
}
pathList() {
    ansiFG
    pathFGColor
    print -l ${(s|:|)PATH}
    cc
}
fpathBannerLeft() {
    ansiFG
    fpathBGColor
    printf -- '\Ue0b6'
    cc
}
fpathBannerBody() {
    ansiBG
    fpathBGColor
    ansiFG
    fpathFGColor
    ansiUL
    fpathULColor
    printf -- '<-::Exported $FPATH::->'
    cc
}
fpathBannerRight() {
    ansiFG
    fpathBGColor
    echo '\Ue0b4'
    cc
}
fpathList() {
    ansiFG
    fpathFGColor
    print -l ${(s|:|)FPATH}
    cc
}


pathBannerLeft
pathBannerBody
pathBannerRight
pathList

echo

fpathBannerLeft
fpathBannerBody
fpathBannerRight
fpathList


